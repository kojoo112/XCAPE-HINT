<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.samsan.xcape.mapper.HintMapper">

    <select id="getHint" resultType="com.samsan.xcape.vo.HintVO">
        SELECT
               `seq`,
               `merchant`,
               `theme`,
               `index_of_theme`,
               `key`,
               `message1`,
               `message2`,
               `use`
        FROM
             `xcape`;
    </select>

    <insert id="registerHint" parameterType="com.samsan.xcape.vo.HintVO">
        INSERT INTO `xcape`(
            `key`, `message1`, `message2`, `use`, `theme`, `merchant`, `index_of_theme`
            )
            VALUES(
            #{key}, #{message1}, #{message2}, #{use}, #{theme}, #{merchant}, #{index_of_theme}
            )
    </insert>

    <update id="updateHint" parameterType="com.samsan.xcape.vo.HintVO">
        UPDATE
            `xcape`
        SET
            `key` = #{key},
            `message1` = #{message1},
            `message2` = #{message2},
            `use` = #{use},
            `theme` = #{theme},
            `merchant` = #{merchant},
            `index_of_theme` = #{index_of_theme}
        WHERE
              (`seq` = #{seq});
    </update>

</mapper>